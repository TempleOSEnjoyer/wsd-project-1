<% layout("./layouts/layout.eta") %>
<body>
    <h2><a href="/lists">Lists</a></h2>
    <ul>
        <% if (Number(it.list_count) === 0) { %>
            <li>No shopping lists yet.</li>
        <% } else { %>
            <li>Shopping lists: <%=it.list_count %></li>
            <li>Shopping list items: <%=it.item_count %></li>
        <% } %>
    </ul>
</body>